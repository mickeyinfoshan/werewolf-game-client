.row {
  background-color: #fff;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-start;
  padding: 10px;
  font-size: 1rem;
  margin-bottom: 1px;
}

.text-input-wrapper {
  flex: 1;
  padding-left: 50px;
  display: flex;
  flex-direction: row;
 justify-content: flex-end;
}

.text-input, textarea {
  /* border: solid 1px #ddd; */
  flex: 1;
  padding: 0 10px;
}

.text-input {
    text-align: right;
}

.picker-text {
  display: inline-block;
}

.row.textarea-row {
  flex-direction: column;
  align-items: flex-start;
}

.textarea-wrapper {
  width: calc(100% - 20px);
  margin-top: 10px;
}

.row-textarea {
  align-items: flex-start;
}

textarea {
  width: 100%;
}

.save-btn-wrapper {
  position: fixed;
  bottom: 10px;
  left: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
}

.save-btn {
  width: 90%;
}