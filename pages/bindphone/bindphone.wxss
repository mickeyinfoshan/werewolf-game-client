.row {
  background-color: #fff;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  padding: 10px;
  font-size: 14px;
  margin-bottom: 1px;
}

.row input {
  text-align: right;
}

.sms-wrapper {
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
}

.sms-btn {
  margin-left: 10px;
}

.save-btn-wrapper {
  position: fixed;
  bottom: 10px;
  left: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
}

.save-btn {
  width: 90%;
}